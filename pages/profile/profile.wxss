/* pages/profile/profile.wxss */

/* Banner Component */
.banner {
  color: white;
  text-align: center;
  height: 100vh;
  /* if you have a 70px navbar => height: calc(100vh - 70px); */
  background-size: cover !important;
  background-position: center;
  display: flex;
  align-items: center;
  justify-content: center;
  -webkit-filter: blur(5px);
  filter: blur(5px);
}

.tabs {
  position: fixed;
  top:0;
  width: 100%;
  flex: 0 0 auto;
  display: flex;
  justify-content: space-between;
  color: white;
}

.tab {
  flex: 0 0 1%;
  text-align: center;
  padding-top: 5px;

}

.menu {
  padding-left: 10px;
  width: 75rpx;
  height: 75rpx;
}

.bookmark {
  width: 75rpx;
  height: 75rpx;
}

.namelocation {
  font-size: 80px;
  top: 30px;
  left: 7px;
  position: fixed;
  font-weight: lighter;
  color: white
}

/*cards*/

.post-align {
  text-align: center;
}

.avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-left: 5px;
  margin-top: 5px;
}




.discount-avatar {
  width: 50px;
  height: 50px;
  border-radius: 50%;
   text-align: center; 
   opacity: 0.8;
}


.card {
  margin: 20px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
  background-color: rgba(0, 0, 0, 0.2)
}

.flex-wrp {
  display: flex;
  flex-direction: column;
}

.flex-item-head {
  flex: 0 0 60px;
  
}

.flex-item-pic {
  flex: 0 0 250px;
  background-size: cover;
  background-position: center center;
}

.flex-item-msg {
  flex: 0 0 15px;
  font-size: 14px;
  text-align: center;
  margin-top: 5px;
}

.flex-item-location {
  flex: 0 0 20px;
  font-size: 8px;
  text-align: center;
  color: #888888;
  margin-bottom: 5px;
}

.flex-item-bottom {
  flex: 0 0 30px;
}

.card-head {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  padding: 5px;
  border-bottom: solid;
  border-bottom-color: black;
  border-bottom-width: 1px;
  /* border-bottom-margin */
}

.flex-for-name-time {
  display: flex;
  flex-direction: column;
  padding: 0px 5px;
}

.username-font-size-xs {
  font-size: 10px;
}

.username-font-size-sm {
  font-size: 12px;
}


.username-font-size-nm {
  font-size: 16px;
}

.detail-font-head {
  font-size: 10px;
  color: #888888;
}

.card-head-between-name-discount {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0px 5px;
}

.flex-item-name {
  flex: 0 0 auto;
}

.card-head-right {
  flex: 1 0 auto;
}

.discount-text {
  color: black;
  font-size: 16px;
   padding-top: 12px; 
}

.flex-item-bottom {
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.flex-bottom-item {
  color: #333333;
  font-size: 12px;
}