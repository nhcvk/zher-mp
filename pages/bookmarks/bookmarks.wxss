.background {
  background: #888888;
  height: 100vh;
  display: flex;
  justify-items: center;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  color: white;
}

section.title {
  color: white;
}

.tabs {
  position: fixed;
  top:0;
  width: 100%;
  flex: 0 0 auto;
  display: flex;
  justify-content: space-between;
}

.tab {
  flex: 0 0 1%;
  text-align: center;
  padding-top: 5px;

}

.menu {
  padding-left: 10px;
  width: 75rpx;
  height: 75rpx;
}

.bookmark {
  width: 75rpx;
  height: 75rpx;
}

.namelocation {
  font-size: 80px;
  bottom: 0;
  left: 7px;
  position: fixed;
  font-weight: lighter;
}

.cityName {
  font-weight: lighther;
  font-size: 50rpx;
}