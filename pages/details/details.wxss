/* pages/details/details.wxss */

/* Banner Component */
.banner {
  color: white;
  text-align: center;
  height: 100vh;
  /* if you have a 70px navbar => height: calc(100vh - 70px); */
  background-size: cover !important;
  background-position: center;
  display: flex;
  align-items: center;
  justify-content: center;
}

.tabs {
  position: fixed;
  top:0;
  width: 100%;
  flex: 0 0 auto;
  display: flex;
  justify-content: space-between;
  color: white;
}

.tab {
  flex: 0 0 1%;
  text-align: center;
  padding-top: 5px;

}

.menu {
  padding-left: 10px;
  width: 75rpx;
  height: 75rpx;
}

.bookmark {
  width: 75rpx;
  height: 75rpx;
}

.namelocation {
  font-size: 80px;
  top: 30px;
  left: 7px;
  position: fixed;
  font-weight: lighter;
  color: white
}

/*cards*/

.card {
  margin: 20px;
  background-color: rgba(0, 0, 0, 0.8);
}

.flex-wrp {
  display: flex;
  flex-direction: column;
}

.flex-item-head {
  flex: 0 0 60px;
}

.flex-item-msg {
  flex: 0 0 60px;
  font-size: 14px;
  text-align: left;
  margin: 7px;
}

.card-head {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  padding: 5px;
  border-bottom: solid;
  border-bottom-color: white;
  border-bottom-width: 1px;

}